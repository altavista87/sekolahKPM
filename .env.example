# EduSync Netlify Deployment - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ═══════════════════════════════════════════════════════════
# REQUIRED VARIABLES
# ═══════════════════════════════════════════════════════════

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789

# Database URL (use serverless-friendly database like Neon or Supabase)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:pass@ep-xxx.us-east-1.aws.neon.tech/edusync

# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=your_random_secret_key_here_change_in_production

# ═══════════════════════════════════════════════════════════
# OPTIONAL AI SERVICE KEYS (at least one recommended)
# ═══════════════════════════════════════════════════════════

# Google Gemini API (recommended, free tier available)
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Together AI API (for vision models)
TOGETHER_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI API (optional)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ═══════════════════════════════════════════════════════════
# OPTIONAL REDIS (for caching and sessions)
# ═══════════════════════════════════════════════════════════

# Redis URL (Upstash or similar serverless Redis)
# Format: redis://default:password@host:port
REDIS_URL=redis://default:password@xxx.upstash.io:6379

# ═══════════════════════════════════════════════════════════
# WEBHOOK CONFIGURATION
# ═══════════════════════════════════════════════════════════

# Webhook secret for validation (generate random string)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Full webhook URL (will be set automatically after deploy)
# Format: https://your-site.netlify.app/api/webhook/telegram
WEBHOOK_URL=

# ═══════════════════════════════════════════════════════════
# FEATURE FLAGS
# ═══════════════════════════════════════════════════════════

# Enable AI enhancement for OCR
ENABLE_AI_ENHANCEMENT=true

# Enable WhatsApp integration (requires 360dialog or similar)
ENABLE_WHATSAPP=false
WHATSAPP_API_KEY=

# Enable batch processing
ENABLE_BATCH_PROCESSING=true

# ═══════════════════════════════════════════════════════════
# MONITORING & LOGGING
# ═══════════════════════════════════════════════════════════

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ═══════════════════════════════════════════════════════════
# DEVELOPMENT SETTINGS
# ═══════════════════════════════════════════════════════════

# Environment (development, staging, production)
ENVIRONMENT=production

# Debug mode (never true in production!)
DEBUG=false

# Database pool size (keep low for serverless)
DATABASE_POOL_SIZE=5
